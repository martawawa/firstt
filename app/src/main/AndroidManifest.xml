<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.fundamentals">

    <!--    Para cambiar el logo de la app lo ponemos en
                android:icon="@drawable/nombre_logo"
                android:roundIcon="@drawable/nombre_logo"-->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_planet_svgrepo_com"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_planet_svgrepo_com"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fundamentals"
        tools:targetApi="31">



        <activity
            android:name="com.example.practica.Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
        android:name="com.example.practica.Signup"
        android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

        <!--        Aqui es donde debemos poner la clase Login-->
        <activity
            android:name="com.example.practica.Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>